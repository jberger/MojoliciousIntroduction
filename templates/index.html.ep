% my $url = url_for slide => { slide => simple_slides->first_slide, format => 'html' };
<!DOCTYPE html>
<html>
  <head>
    % if ( my $href = simple_slides->base_href ) {
      %= tag base => href => $href
    % }
    <meta http-equiv="refresh" content="0;url=<%= $url %>" />
  </head>
  <body>
    <a href="<%= $url %>">Go to the talk</a>
  </body>
</html>

